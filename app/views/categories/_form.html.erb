
<%= form_for(@category) do |f| %>
  <% if @category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
      <% @category.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="jumbotron div-formulario nuevo">
  <div class="form-group">
    <%= f.label :nombre %><br>
    <%= f.text_field :nombre, autofocus: true, class: 'form-control', :required => true  %>
  </div>
  
  
  <div class="form-group">
    <%= f.label :descripcion %><br>
    <%= f.text_area :descripcion, autofocus: true, class: 'form-control' %>
  </div>
  <div class="col-md-2 col-md-offset-1 ">
    <%= button_tag(type: :submit, class: "btn btn-lg btn-success", id: "guardar") do %>
        <i class="fa fa-check-square" aria-hidden="true"></i> Guardar
    <% end %>
  </div>
  <div class="col-md-2 col-md-offset-1">
    <%= link_to "<i class='fa fa-reply' aria-hidden='true'></i> Volver".html_safe,
                categories_path, class: 'btn btn-success btn-lg'%>
  </div>
<% end %>
</div>